!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Udghosh"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all", "data-turbolinks-track" => true
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application", "data-turbolinks-track" => true

  %body
    %nav.navbar.navbar-default.navbar-fixed-top.navbar-inverse{role: "navigation"}
      .navbar-header
        %button.navbar-toggle{"data-target" => "#nav-collapse", "data-toggle" => "collapse", type: "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to "Udghosh", root_path, class: "navbar-brand"
      #nav-collapse.collapse.navbar-collapse
        - if user_signed_in?
          %p.navbar-text
            Signed in as
            = link_to current_user.email, edit_user_registration_path, class: "navbar-link"
          %ul.nav.navbar-nav
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                Manage
              %ul.dropdown-menu
                %li= link_to "Schools", schools_path
                %li= link_to "Interns", staffs_path
                %li= link_to "PCMB Test Entries", pcmbs_path
            %li= link_to "Sign out", destroy_user_session_path, method: :delete
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "Home", root_path
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: about_path}
              About
            %ul.dropdown-menu
              %li= link_to "Udghosh", about_udghosh_path
              %li= link_to "FOBJ", about_fobj_path
              %li= link_to "Team", about_team_path
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              Events
            %ul.dropdown-menu
              %li= link_to "Dance", events_dance_path
              %li= link_to "Dramatics", events_dramatics_path
              %li= link_to "Extempore", events_extempore_path
              %li= link_to "Quizzing", events_quizzing_path
              %li= link_to "Singing", events_singing_path
              %li= link_to "Fashion Show", events_fashion_show_path
              %li= link_to "PCMB Test", new_pcmb_path
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              Work with us
            %ul.dropdown-menu
              %li= link_to "Publicity", new_staff_path(type: "publicity")
              %li= link_to "Marketing", new_staff_path(type: "marketing")
              %li= link_to "Infrastructure", new_staff_path(type: "infrastructure")
              %li= link_to "Decoration", new_staff_path(type: "decoration")
              %li= link_to "Event Manager", new_staff_path(type: "district_event_manager")
              %li= link_to "Security", new_staff_path(type: "security")
              %li= link_to "Hospitality", new_staff_path(type: "hospitality")
              %li= link_to "Anchor", new_staff_path(type: "anchor")
          %li= link_to "Schedule", schedule_path
          %li= link_to "Sponsors", sponsors_path

    %nav#loading.navbar.navbar-default.navbar-fixed-bottom{role: "navigation"}
      %center
        %p.navbar-text The page is loading. This might take a few seconds depending on your internet speed...

    .container
      .row
        = yield
    
    %footer
      %hr/
      %center &copy; Udghosh 2014 - The Cultural Movement of India
      %br/
