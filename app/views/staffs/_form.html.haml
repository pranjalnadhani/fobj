= form_for @staff do |f|
  - if @staff.errors.any?
    #error_explanation
      %h2= "#{pluralize(@staff.errors.count, "error")} prohibited this staff from being saved:"
      %ul
        - @staff.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :college
    = f.text_field :college
  .field
    = f.label :year
    = f.number_field :year
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :phone
    = f.number_field :phone
  .field
    = f.label :past_experience
    = f.text_area :past_experience
  .field
    = f.label :why_hire
    = f.text_area :why_hire
  .actions
    = f.submit 'Save'
