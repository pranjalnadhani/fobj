.well
  %h1 Listing schools

  %table.table
    %tr
      %th Name of school
      %th Principal name
      %th Type
      %th Place
      %th Affiliated to
      %th Email
      %th Phone no
      %th

    - @schools.each do |school|
      %tr
        %td= school.name_of_school
        %td= school.principal_name
        %td= school.type
        %td= school.place
        %td= school.affiliated_to
        %td= school.email
        %td= school.phone_no
        %td
          .btn-toolbar.pull-right
            = link_to 'Show', school, class: 'btn btn-info btn-sm'
            = link_to 'Edit', edit_school_path(school), class: 'btn btn-warning btn-sm'
            = link_to 'Delete', school, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger btn-sm'

  %br/

  = link_to 'New School', new_school_path, class: 'btn btn-primary'
